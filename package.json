    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.10.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
